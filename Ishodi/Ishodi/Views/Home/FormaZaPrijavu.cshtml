@model Ishodi.Models.ModelZaPrijavu


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="width: 400px; margin-left: auto; margin-right:auto;">
        <a href='/'>
            <img src="~/Content/Slike/Logo.jpg" class="center-block" alt="" />
        </a>
        <div class="form-horizontal">
          


            <input type="submit" value="Vaše korisničko ime i lozinka" disabled class="btn btn-primary btn-md" />
            <p />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.korisnickoime, new { htmlAttributes = new { @class = "form-control", placeholder = "Korisničko ime" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.korisnickalozinka, new { htmlAttributes = new { @class = "form-control", placeholder = "Lozinka" } })
                </div>
            </div>

            <input type="submit" value="Prijava" class="btn btn-danger btn-sm" />

            <p />
            <div class="col-md-10">
                <input type="button" value="Prijava" onclick="location.href='@Url.Action("FormaZaPrijavu", "Home")'" class="btn btn-link btn-sm"  style="text-decoration: underline" />
                <input type="button" value="Zaboravljena lozinka" onclick="location.href='@Url.Action("FormaZaZabLozinku", "Home")'" class="btn btn-link btn-sm" />
                <input type="button" value="Registracija" onclick="location.href='@Url.Action("FormaZaRegistraciju", "Home")'" class="btn btn-link btn-sm" />
            </div>
        </div>

    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
